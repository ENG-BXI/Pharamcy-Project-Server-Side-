generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Medicine {
  id          String        @id @default(uuid())
  name        String
  category_id String //relation
  company_id  String //relation
  batch       Batch[]
  Return_item Return_item[]
}

model Batch {
  id            String   @id @default(uuid())
  purchase_date DateTime
  creation_date DateTime
  expire_date   DateTime
  medicine_id   String
  medicine      Medicine @relation(fields: [medicine_id], references: [id])
  unit_price    Float
  type_currency String
}

model Return {
  id          String        @id @default(uuid())
  invoice_id  String
  return_date DateTime
  Return_item Return_item[]
}

model Return_item {
  id          String   @id @default(uuid())
  return_id   String
  return      Return   @relation(fields: [return_id], references: [id], onDelete: Cascade)
  medicine_id String
  medicine    Medicine @relation(fields: [medicine_id], references: [id])
  batch_id    String
  count       Int
}
